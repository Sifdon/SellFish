<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:layout_margin="5dp"
    android:background="@drawable/blue_rounded">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pez n:"
                android:id="@+id/fishNumber" />
            <TextView
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Seaman i"
                android:id="@+id/fishWeek" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="cm"
                android:id="@+id/fishLength" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/fishWeight" />
        </LinearLayout>
        <ImageView
            android:id="@+id/fishImage"
            android:scaleType="fitXY"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>
    <Button
        android:id="@+id/btnGrabaciones"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAllCaps="false"
        android:drawableEnd="@drawable/ic_microphone"
        android:drawableRight="@drawable/ic_microphone"
        android:text="@string/grabaciones"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"/>

</LinearLayout>